<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:background="#0B0F14"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Pasiflonet • Login"
            android:textColor="#FFFFFF"
            android:textSize="20sp"
            android:textStyle="bold"
            android:paddingBottom="12dp"/>

        <TextView
            android:id="@+id/tvStatus"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="סטטוס: ממתין…"
            android:textColor="#B3FFFFFF"
            android:textSize="13sp"
            android:paddingBottom="12dp"/>

        <EditText
            android:id="@+id/etApiId"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="API ID (מספר)"
            android:inputType="number"
            android:textColor="#FFFFFF"
            android:textColorHint="#80FFFFFF"
            android:padding="12dp"
            android:background="#141B22"/>

        <EditText
            android:id="@+id/etApiHash"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:hint="API HASH"
            android:inputType="text"
            android:textColor="#FFFFFF"
            android:textColorHint="#80FFFFFF"
            android:padding="12dp"
            android:background="#141B22"/>

        <EditText
            android:id="@+id/etPhone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:hint="טלפון +972…"
            android:inputType="phone"
            android:textColor="#FFFFFF"
            android:textColorHint="#80FFFFFF"
            android:padding="12dp"
            android:background="#141B22"/>

        <EditText
            android:id="@+id/etTargetUsername"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:hint="ערוץ יעד בפורמט @username"
            android:inputType="text"
            android:textColor="#FFFFFF"
            android:textColorHint="#80FFFFFF"
            android:padding="12dp"
            android:background="#141B22"/>

        <EditText
            android:id="@+id/etCode"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:hint="קוד אימות (SMS/Telegram)"
            android:inputType="number"
            android:textColor="#FFFFFF"
            android:textColorHint="#80FFFFFF"
            android:padding="12dp"
            android:background="#141B22"
            android:visibility="gone"/>

        <EditText
            android:id="@+id/etPassword"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:hint="סיסמת 2FA (אם יש)"
            android:inputType="textPassword"
            android:textColor="#FFFFFF"
            android:textColorHint="#80FFFFFF"
            android:padding="12dp"
            android:background="#141B22"
            android:visibility="gone"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="14dp">

            <Button
                android:id="@+id/btnSendCode"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="שלח קוד אימות"/>

            <Button
                android:id="@+id/btnLogin"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginStart="10dp"
                android:text="התחבר"
                android:visibility="gone"/>
        </LinearLayout>

    </LinearLayout>
</ScrollView>
