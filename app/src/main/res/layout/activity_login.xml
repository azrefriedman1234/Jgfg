<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:background="#0B0F1A">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <TextView
            android:id="@+id/tvStatus"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="סטטוס: לא מחובר"
            android:textColor="#FFFFFF"
            android:textSize="16sp"
            android:paddingBottom="12dp"/>

        <EditText
            android:id="@+id/etApiId"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="API ID"
            android:inputType="number"
            android:textColor="#FFFFFF"
            android:textColorHint="#90FFFFFF"
            android:backgroundTint="#90FFFFFF" />

        <EditText
            android:id="@+id/etApiHash"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="API HASH"
            android:inputType="text"
            android:textColor="#FFFFFF"
            android:textColorHint="#90FFFFFF"
            android:backgroundTint="#90FFFFFF"
            android:layout_marginTop="10dp" />

        <EditText
            android:id="@+id/etPhone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="טלפון (למשל +972...)"
            android:inputType="phone"
            android:textColor="#FFFFFF"
            android:textColorHint="#90FFFFFF"
            android:backgroundTint="#90FFFFFF"
            android:layout_marginTop="10dp" />

        <EditText
            android:id="@+id/etTargetUsername"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="ערוץ יעד @username"
            android:inputType="text"
            android:textColor="#FFFFFF"
            android:textColorHint="#90FFFFFF"
            android:backgroundTint="#90FFFFFF"
            android:layout_marginTop="10dp" />

        <Button
            android:id="@+id/btnSendCode"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="שלח קוד אימות"
            android:layout_marginTop="14dp"/>

        <EditText
            android:id="@+id/etCode"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="קוד אימות"
            android:inputType="number"
            android:textColor="#FFFFFF"
            android:textColorHint="#90FFFFFF"
            android:backgroundTint="#90FFFFFF"
            android:layout_marginTop="10dp" />

        <EditText
            android:id="@+id/etPassword"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="סיסמת 2FA (אם יש)"
            android:inputType="textPassword"
            android:textColor="#FFFFFF"
            android:textColorHint="#90FFFFFF"
            android:backgroundTint="#90FFFFFF"
            android:layout_marginTop="10dp" />

        <Button
            android:id="@+id/btnLogin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="התחבר"
            android:layout_marginTop="14dp"/>

    </LinearLayout>
</ScrollView>
