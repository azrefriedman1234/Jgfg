<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Theme.Pasiflonet" parent="Theme.Material3.Dark.NoActionBar">
        <!-- App colors -->
        <item name="colorPrimary">@color/primary</item>
        <item name="colorSecondary">@color/secondary</item>
        <item name="colorTertiary">@color/tertiary</item>

        <!-- Force readable text -->
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textColorPrimary">@android:color/white</item>
        <item name="android:textColorSecondary">@android:color/darker_gray</item>

        <!-- Material TextInput defaults -->
        <item name="textInputStyle">@style/Widget.Pasiflonet.TextInputLayout</item>
    </style>

    <style name="Widget.Pasiflonet.TextInputLayout" parent="Widget.Material3.TextInputLayout.OutlinedBox">
        <item name="hintTextColor">@android:color/darker_gray</item>
        <item name="boxStrokeColor">@android:color/darker_gray</item>
        <item name="boxStrokeErrorColor">@android:color/holo_red_light</item>
        <item name="endIconTint">@android:color/white</item>
        <item name="startIconTint">@android:color/white</item>
        <item name="android:textColorHint">@android:color/darker_gray</item>
    </style>

</resources>
